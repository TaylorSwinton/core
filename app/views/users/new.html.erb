<h1>Sign Up</h1>

<!-- since youre creating/updating use form_for -->
    <%= render partial: 'layouts/errors', locals: {object: @user} %>

<%= form_for(@user) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <%= f.label :user_admin %>
    <%= f.check_box :admin %> (Be an Admin to create courses)
    <br>
    <%= f.submit "Sign In"%>
<% end %>