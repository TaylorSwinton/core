<h1><%= @course.title %> Course<h1>
<h3>Category: <%= @course.category %> </h3>
<h3>Course Rating: <%= @course.course_rating %></h3>
<h4>Time that should be spent on course: <%= @course.time %> Minutes </h4>
<p><%= @course.description %></p>

<!-- list the steps here -->
    <!-- should have links to the steps show page so to edit or delete-->
    <!--EX courses/1/steps/1 -->
<ol>
    <% @course.steps.each do |step| %>
        <li><%= link_to step.name, step_path(step) %>
            <ul>
                <li><%= step.description %></li>
            </ul>
        </li>
    <% end %>
<ol>

<br>
<br>

<%= link_to "Add A Step", new_course_step_path(@course) %>
<%= link_to "Edit Course", edit_course_path(@course) %>
<%= link_to "Delete Course", course_path(@course), method: :delete %>
