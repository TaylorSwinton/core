<h1>Edit Your Course</h1>

<%= form_for(@course) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <br>
    <%= f.label :time %>
    <%= f.number_field :time, min:0 %> Minutes
    <br>
    <%= f.label :category %>
    <%= f.select(:category, [ "Mind", "Body", "Mood", "Sleep", "Social" ]) %>
    <br>
    <%= f.submit 'Edit Course' %>
<% end %>