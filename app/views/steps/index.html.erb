<h1 class="courseTitle"><%= @course.title %> Course<h1>
<h3 class="courseCategory">Category: <%= @course.category %> </h3>
<h4 class="courseTime">Time that should be spent on course: <%= @course.time %> Minutes </h4>
<p class="courseDescription"><%= @course.description %></p>
<ol class="courseSteps">
    <% @steps.each do |step| %>
        <div>
            <li><%= link_to step.name, step_path(step)%></li>
            Description: <%= step.description %>
        <div>
    <% end %>
</ol>

<%= link_to "Add A Step", new_course_step_path(@course) %>
<%= link_to "Edit Course", edit_course_path(@course) %>
<%= link_to "Delete Course", course_path(@course), method: :delete %>
<a href="#" class="js-next" data-id="<%=@course.id%>">Next Course</a>

<script type="text/javascript" charset="utf-8">
    $(function () {
        $(".js-next").on("click", function(e) {
            e.preventDefault();
                var nextId = parseInt($(".js-next").attr("data-id")) + 1;
                $.getJSON("/courses/" + nextId + "/steps", function(data){
                    $(".courseTitle").text(data["title"]);
                    $(".courseCategory").text(data["category"]);
                    $(".courseTime").text(data["time"]);
                    $(".courseDescription").text(data["description"]);
                  //  $(".courseSteps").text(data["steps"]["name"]);
                    $(".js-next").attr("data-id", data["id"]);
                });
        });
    });
</script>